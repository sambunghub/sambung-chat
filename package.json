{
  "name": "sambung-chat",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "ai": "^6.0.3",
      "@ai-sdk/openai-compatible": "^2.0.3",
      "@orpc/client": "^1.12.2",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.15.6",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.2.5",
      "@tanstack/svelte-form": "^1.19.2",
      "mode-watcher": "^1.1.0",
      "svelte-sonner": "^1.0.7"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:native": "turbo -F native dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "dev:all": "bun run dev:web",
    "db:push": "turbo -F @sambung-chat/db db:push",
    "db:studio": "turbo -F @sambung-chat/db db:studio",
    "db:generate": "turbo -F @sambung-chat/db db:generate",
    "db:migrate": "turbo -F @sambung-chat/db db:migrate",
    "db:start": "turbo -F @sambung-chat/db db:start",
    "db:watch": "turbo -F @sambung-chat/db db:watch",
    "db:stop": "turbo -F @sambung-chat/db db:stop",
    "db:down": "turbo -F @sambung-chat/db db:down",
    "status:update": "bun run scripts/update-status.ts",
    "status:pending": "bun run scripts/status-pending.ts",
    "status:blocked": "bun run scripts/status-blocked.ts",
    "test": "bun test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "node node_modules/playwright/cli.js test",
    "test:e2e:ui": "node node_modules/playwright/cli.js test --ui",
    "test:e2e:debug": "node node_modules/playwright/cli.js test --debug",
    "prepare": "husky",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^2.0.4",
    "@sambung-chat/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.50.1",
    "@sambung-chat/config": "workspace:*",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.50.1",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "typescript-eslint": "^8.52.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "bun@1.2.23"
}
