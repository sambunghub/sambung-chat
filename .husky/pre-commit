echo "üîç Pre-commit checks started..."
echo ""

# 1. Run lint-staged for formatting and quick checks
echo "1Ô∏è‚É£  Running lint-staged (formatting)..."
bunx lint-staged
echo "   ‚úÖ lint-staged passed"
echo ""

# 2. Run full ESLint check
echo "2Ô∏è‚É£  Running ESLint..."
bun run lint
if [ $? -ne 0 ]; then
  echo "   ‚ùå ESLint failed - fix errors before committing"
  exit 1
fi
echo "   ‚úÖ ESLint passed"
echo ""

# 3. Run svelte-check for UI package
echo "3Ô∏è‚É£  Running svelte-check on UI package..."
cd packages/ui && bun run check
if [ $? -ne 0 ]; then
  echo "   ‚ùå svelte-check failed - fix type errors before committing"
  exit 1
fi
cd ../..
echo "   ‚úÖ svelte-check passed"
echo ""

# 4. Run svelte-check for web app
echo "4Ô∏è‚É£  Running svelte-check on web app..."
cd apps/web && bun run check
if [ $? -ne 0 ]; then
  echo "   ‚ùå svelte-check failed - fix type errors before committing"
  exit 1
fi
cd ../..
echo "   ‚úÖ svelte-check passed"
echo ""

# 5. Run full build to ensure everything compiles
echo "5Ô∏è‚É£  Running build..."
bun run build
if [ $? -ne 0 ]; then
  echo "   ‚ùå Build failed - fix build errors before committing"
  exit 1
fi
echo "   ‚úÖ Build passed"
echo ""

echo "‚úÖ All pre-commit checks passed! Safe to commit."
echo ""
